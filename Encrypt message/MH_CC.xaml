<Page x:Class="Encrypt_message.MH_CC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Encrypt_message"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MH_CC" Height="680" Width="715">

    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="Images/Background.jpg"/>
        </Canvas.Background>
        <ToolBar Width="705">
            <Button Name="back" Click="Back_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source=".\Images\go-back.png" Height="20" Width="22"></Image>
                    <TextBlock Text="Back" Width="30"></TextBlock>
                </StackPanel>
            </Button>
            <Separator/>

        </ToolBar>

        <!--<Image x:Name="pentecostéstotal_1024x683_jpg" Height="509" Source="pentecostéstotal-1024x683.jpg" Stretch="Fill" Width="766" Opacity="0.275"/>-->
        <TextBox Name="input" TextWrapping="Wrap" FontSize="20" Width="654" Height="226" Canvas.Left="26" Canvas.Top="83" Canvas.Right="26">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.6"/>
            </TextBox.Background>
        </TextBox>
        <TextBox Name="output" TextWrapping="Wrap" FontSize="20" Width="652" Height="237" Canvas.Left="28" Canvas.Top="386" Canvas.Right="26" >
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.6"/>
            </TextBox.Background>
        </TextBox>
        <Button Name="chuyen" Style="{StaticResource PrimaryButton}" Content="MÃ HÓA" FontWeight="Heavy" Width="79" Height="28" Canvas.Left="28" Canvas.Top="352" Click="Chuyen_Click"></Button>

        <TextBlock Text="Bạch văn: " FontSize="25" FontWeight="Heavy" Canvas.Left="26" Canvas.Top="35"></TextBlock>
        <!--<TextBlock Text="Mã hóa: " FontSize="25" FontWeight="Heavy" Canvas.Left="31" Canvas.Top="348"></TextBlock>-->

        <TextBlock Text="Chữ thay thế:" FontSize="20" FontWeight="Heavy" Canvas.Left="26" Canvas.Top="316"></TextBlock>
        <TextBox Name="chucanmahoa" FontSize="20" Width="158" Height="30" Canvas.Left="170" Canvas.Top="314">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.6"/>
            </TextBox.Background>
        </TextBox>
        <TextBlock Text="Thế bằng chữ:" FontSize="20" FontWeight="Heavy" Canvas.Left="377" Canvas.Top="315"></TextBlock>
        <TextBox Name="chumahoa" FontSize="20" Width="158" Height="30" Canvas.Left="522" Canvas.Top="313">
            <TextBox.Background>
                <SolidColorBrush Color="White" Opacity="0.6"/>
            </TextBox.Background>
        </TextBox>
        <TextBlock Text="Chìa khóa:" FontSize="20" FontWeight="Heavy" Canvas.Left="31" Canvas.Top="628"></TextBlock>

        <TextBlock Name="chiakhoa" FontSize="20" FontWeight="Heavy" Width="158" Height="30" Canvas.Left="150" Canvas.Top="629" Foreground="Red" Opacity="0.695"/>
        <TextBlock Text="*Nhập chữ IN HOA" FontStyle="Italic" Canvas.Left="26" Canvas.Top="65"></TextBlock>

        <!--<Button Name="Help_mahoachuchu" Height="49" Width="46" Canvas.Left="690" Background="{x:Null}" BorderBrush="{x:Null}" Canvas.Top="438" Click="Help_mahoachuchu_Click">
            <StackPanel Orientation="Horizontal" Height="39" Width="41">
                <Image Source=".\Images\Question-icon.png" Width="43" Margin="0,1"/>
            </StackPanel>
        </Button>-->
    </Canvas>
</Page>
